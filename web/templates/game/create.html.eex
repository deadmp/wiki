<div class="container">
  <h2>add a new game</h2>
  <%= form_for @changeset, game_path(@conn, :create), fn f -> %>
  <label>
    Name: <%= text_input f, :name %>
  </label>

  <label>
    Description: <%= textarea f, :description %>
  </label>

  <label>
    Boxart: <%= text_input f, :boxart %>
  </label>

  <%= submit "Add!" %>
  <% end %>
</div>
